{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "allowJs": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["es2020", "DOM"],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
